#include <iostream>
using namespace std;

int main()
{
	setlocale(LC_ALL, "ru");
	int n,a,d;
	cout << "Введите целое число N (> 0): ";
	cin >> n;
	cout << "Введите первый член А: ";
	cin >> a;
	cout << "Введите знаменатель D: ";
	cin >> d;
	int* m = new int[n];
	for (int i = 0; i < n; i++) {
		m[i] = a*pow(d,i);
		cout << m[i] << "\t";
	}
	cout << endl;
}
